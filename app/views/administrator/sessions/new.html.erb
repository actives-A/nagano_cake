<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="bg-light text-dark text-center col-3 mt-5">管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form_group row mt-5 ml-3">
          <%= f.label :メールアドレス, class: "col-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-3 col-6" %>
        </div>
        <div class="form_group row mt-3 ml-3">
          <%= f.label :パスワード, class: "col-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mb-5 col-6" %>
        </div>
        <div class="actions row mt-3 ml-3">
          <%= f.submit :ログイン, class: "btn btn-primary col-2 offset-3" %>
        </div>
      <% end %>
      <%= render "administrator/shared/links" %>
   </div>
  </div>
</div>
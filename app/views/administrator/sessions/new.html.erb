<div class="container">
  <h2 class="border-bottom text-dark text-center col-md-3 mt-3">管理者ログイン</h2>
　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form_group row mt-5">
    <%= f.label :"メールアドレス", class: "col-md-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "mb-3 col-md-6" %>
  </div>

  <div class="form_group row">
    <%= f.label :"パスワード", class: "col-3" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mb-5 col-md-6" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field row">
      <%= f.check_box :remember_me , class: "ml-3" %>
      <%= f.label :remember_me  , class: "ml-2 col-md-6" %>
    </div>
  <% end %>

  <div class="actions row">
    <%= f.submit "ログイン", class: "btn btn-blue rounded-pill text-white col-md-3 offset-3 " %>
  </div>
<% end %>

<%= render "administrator/shared/links" %>
</div>
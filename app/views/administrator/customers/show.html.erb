<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th><h2><%= @customer.full_name %>さんの会員詳細</h2></th>
          </tr>
        </thead>
        <tbody>
          <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
          <tr><th>氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td></tr>
          <tr><th>フリガナ</th><td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td></tr>
          <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
          <tr><th>住所</th><td><%= @customer.address %></td></tr>
          <tr><th>電話番号</th><td><%= @customer.phone_namber %></td></tr>
          <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
          <tr><th>会員ステータス</th><td><%= @customer.is_deleted %></td></tr>
          <tr>
            <td><%= link_to "編集する", edit_administrator_customer_path, class: "btn btn-success" %></td>
            <td><%= link_to "注文履歴一覧を見る", administrator_orders_path, class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

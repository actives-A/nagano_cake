<div class="container">
  <h2 class="mt-5"><span class="bg-light">商品詳細</span></h4>
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag @item.get_image,:size => "100x100" %>
    </div>
    <div class="col-sm-7">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th><td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th><td><%= @item.explanation %></td>
          </tr>
          <tr>
            <th>ジャンル</th><td><%= @item.genre.genre_name %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th><td><%= @item.out_tax_price %>円</td>
          </tr>
          <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.sales_status=="on_sales" %>
                  販売中
                <% else %>
                  販売中止
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <span class="text-center">
          <%= link_to " 編集する",edit_administrator_item_path(@item) ,class: "btn btn-success"%>
        </span>
      </div>
    </div>
    </div>
  </div>
</div>

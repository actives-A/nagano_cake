<div class="container">
  <h2 class="border-bottom text-dark text-center col-md-3 mt-3">商品詳細</h2>
  <div class="row">
    <div class="col-md-3 mt-3">
      <%= image_tag @item.get_image,:size => "240x160" %>
    </div>
    <div class="col-md-8 mt-3">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th><td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th><td><%= @item.explanation %></td>
          </tr>
          <tr>
            <th>ジャンル</th><td><%= @item.genre.genre_name %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th><td><%= number_to_currency(@item.out_tax_price) %></td>
          </tr>
          <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.sales_status=="on_sales" %>
                  販売中
                <% else %>
                  販売中止
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <span class="text-center">
          <%= link_to " 編集する",edit_administrator_item_path(@item) ,class: "btn btn-green text-white rounded-pill col-md-4"%>
        </span>
      </div>
    </div>
    </div>
  </div>
</div>

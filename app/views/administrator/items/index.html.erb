<div class="container">
  <h4><span class="bg-light">商品一覧</span></h4>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <table class="table">
        <thead class="table-bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to item.name,administrator_item_path(item) %>
            </td>
            <td><%= item.out_tax_price %></td>
            <td><%= item.genre_id %></td>
            <td><%= item.sales_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <h2><span class="bg-light mt-5">商品一覧</span></h2>
    </div>
    <div class="col-md-6 mx-auto">
      <div class="d-flex justify-content-end mr-3 mb-3">
        <%= link_to new_administrator_item_path do %>
        <div class="border rounded-circle d-flex flex-column" style="height: 40px;width: 40px;">
          <i class="fas fa-plus h4 mb-0 mx-auto my-auto" ></i>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <table class="table">
        <thead class="table-bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to item.name,administrator_item_path(item) %>
            </td>
            <td><%= item.out_tax_price %></td>
            <td><%= item.genre.genre_name %></td>
            <td id="sales_status<%= item.id %>" class="text-success">
              <%= Item.sales_statuses_i18n[item.sales_status] %>
            </td>
          </tr>
          <script>
            if(<%= item.sales_status == "stop_sales"%>){
              var element = document.querySelector('#sales_status<%= item.id %>');
              element.className = 'text-secondary';
            }
          </script>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan=5 ><%= paginate @items %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>


<div class="container">
  <div class="row justify-content-start">

      <h2 class="border-bottom mt-4 col-md-4 text-center">ジャンル一覧・追加</h2>

  </div>
  <div class="row justify-content-start">
    <div class="form-inline my-5 mx-5">
      <h6>ジャンル名</h6>
        <%= form_with model: @genre,url: administrator_genres_path, local:true do |f| %>
          <div class="form-inline px-5">
             <%= f.text_field :genre_name %>
             <%= f.submit :新規登録, class: "mx-5 btn btn-yellow text-white rounded-pill" %>
          </div>
        <% end %>
    </div>
  </div>

   <table class="table col-md-5 text-center ml-3">
     <thead>
      <tr>
        <th class="bg-light">ジャンル</th>
        <th class="bg-light"></th>
      </tr>
     </thead>
     <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.genre_name %></td>
           <td><%= link_to "編集する", edit_administrator_genre_path(genre),class: "btn btn-outline-secondary" %></td>
         </tr>
        <% end %>
     </tbody>
  </table>
</div>
<div class="container">
   <div class="row my-5">
    <h2 class="border-bottom mt-4 col-md-3 text-center">ジャンル編集</h2>
   </div>
    <%= form_with model: @genre,url: administrator_genre_path(@genre), local:true do |f| %>
   <div class="row">

     <div class="col-md-2">
        ジャンル名
        </div>

        <div class="col-md-2">
          <%= f.text_field :genre_name %>
          </div>
          <div class="col-md-3">
          <%= f.submit :変更を保存, class: "btn btn-green rounded-pill text-white  ml-5 " %>
        </div>
     <% end %>
   </div>
</div>
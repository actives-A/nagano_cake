      <table class="table table-hover">
        <thead class="bg-light">
          <tr>
            <th style="width: 30%">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% orders.each do |order| %>
          <tr oncrick='window.location="<%= administrator_order_path(order) %>"' role="link">
            <td style="width: 30%">
              <p class="text-dark"><%= order.created_at.to_s(:datetime_jp) %></p>
            </td>
            <td>
              <%= order.customer.last_name %><%= order.customer.first_name %>
            </td>
            <td><%= order.order_items.count %></td>
            <td><%= Order.order_statuses_i18n[order.order_status.to_sym] %></td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4" class="text-center" >
              <%= paginate orders %>
            </td>
          </tr>
        </tfoot>
      </table>
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th style="width: 30%">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% orders.each do |order| %>
          <tr>
            <td style="width: 30%">
              <%= link_to administrator_order_path(order),method: :get do %>
              <P class="text-dark"><%= order.created_at.to_s(:datetime_jp) %></P>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name %><%= order.customer.first_name %>
            </td>
            <td><%= order.order_items.count %></td>
            <td><%= Order.order_statuses_i18n[order.order_status.to_sym] %></td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4" class="text-center" >
              <%= paginate orders %>
            </td>
          </tr>
        </tfoot>
      </table>
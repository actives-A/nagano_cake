<div class="container">
  <h2 class="mt-5"><span class="bg-light">注文履歴一覧</span></h2>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <table class="table">
        <thead class="table-bg-light">
          <tr>
            <th style="width: 30%">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td style="width: 30%">
              <%= link_to administrator_order_path(order),method: :get do %>
                <%= order.created_at.to_s(:datetime_jp) %>
              <% end %>
            </td>
            <td>
              <%= order.customer.first_name %><%= order.customer.last_name %>
            </td>
            <td><%= order.order_items.count %></td>
            <td><%= Order.order_statuses_i18n[order.order_status.to_sym] %></td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4" class="text-center" >
              <%= paginate @orders %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>


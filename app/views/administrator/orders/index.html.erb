<div class="container">
  <h2 class="border-bottom mt-3 col-md-3 text-center">注文履歴一覧</h2>
  <div class="row">
    <div class="col-sm-10 mx-auto my-2">
      <%= form_with url: order_status_administrator_orders_path,method: :post,class: "mb-2 text-right",local: false do |f| %>
        <%= f.select :order_status ,Order.order_statuses.keys.map{|k|[I18n.t("enums.order.order_status.#{k}"),k]},
            class: "form-control"%>
        <%= button_tag :type => "submit", :class =>"btn btn-outline-dark" do %>
          ステータス検索
        <% end %>
      <% end %>
      <div class="order_lists">
        <%= render "administrator/orders/lists", orders: @orders %>
      </div>
    </div>
  </div>
</div>


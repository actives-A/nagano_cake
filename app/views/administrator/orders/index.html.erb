<h2>注文履歴</h2>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to order.created_at,administrator_order_path(order),method: :get %>
      </td>
      <td>
        <%= order.customer.first_name %><%= order.customer.last_name %>
      </td>
      <td><%= order.order_items.count %></td>
      <td><%= order.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
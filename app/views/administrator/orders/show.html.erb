<h2>注文履歴詳細</h2>
<div>
  <%= form_with model: @order,url: administrator_order_path,method: :patch do |f|%>
  <table>
    <tbody>
      <tr>
        <td>購入者</td><td><%= @order.customer.full_name %></td>
      </tr>
      <tr><td>注文日</td><td><%= @order.created_at %></td></tr>
      <tr><td>配送先</td><td><%= @order.address_display %><br></td></tr>
      <tr><td>支払方法</td><td><%= @order.cash_mean %></td></tr>
      <tr>
        <td>注文ステータス</td><td><%= f.select :order_status,Order.order_statuses.keys.map{|k| [I18n.t("enums.order.order_status.#{k}"),k]} %>
        | <%= f.submit "更新" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>
<div>
  <table>
    <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
    </thead>
    </table>
    <% @order.order_items.each do |order_item| %>
    <%= form_with model: order_item,url: administrator_order_item_path(order_item),method: :patch do |f| %>
    <table>
    <tbody>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.intax_price %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.subtotal %></td>
        <td><%= f.select :puroduction_status,OrderItem.puroduction_statuses.keys.map{|k| [I18n.t("enums.order_item.puroduction_status.#{k}"),k]},selected: order_item.puroduction_status %><%= f.submit "更新",class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
  <% end %>
</div>
<div>
  <table>
    <tr><td>商品合計</td><td><%= @order.payment_total %></td></tr>
    <tr><td>送料</td><td>800円</td></tr>
    <tr><td>請求金額合計</td><td><% all_payment=@order.payment_total+800 %><%= all_payment %></td></tr>
  </table>
</div>
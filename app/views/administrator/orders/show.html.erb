<div class="container">
  <h2 class="border-bottom mt-3 col-md-3 text-center">注文履歴詳細</span></h2>
  <div class="row">
    <div class="col-sm-12 mx-auto mt-3">
    <table class="table table-borderless ">
      <tbody>
        <tr>
          <th style="width: 20%">購入者</th><td><%= @order.customer.full_name %></td>
        </tr>
        <tr><th style="width: 20% bg-liht">注文日</th><td><%= @order.created_at.to_s(:datetime_jp) %></td></tr>
        <tr><th style="width: 20%">配送先</th><td><%= @order.address_display %><br></td></tr>
        <tr><th style="width: 20%">支払方法</th><td><%= I18n.t("enums.order.cash_mean.#{@order.cash_mean}") %></td></tr>
        <tr>
          <th style="width: 20%">注文ステータス</th>
          <td>
            <%= form_with model: @order,url: administrator_order_path,method: :patch,class: "form-group" do |f|%>
            <%= f.select :order_status,Order.order_statuses.keys.map{|k| [I18n.t("enums.order.order_status.#{k}"),k]} ,
                class: "form-select form-select-lg"%>&nbsp;
            <%= f.submit "更新" ,class: "btn btn-green text-white mx-1"%>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-7  position-relative">
      <table class="table">
      <thead class="table-light">
      <tr>
        <th class="bg-light">商品名</th>
        <th class="bg-light">単価（税込）</th>
        <th class="bg-light">数量</th>
        <th class="bg-light">小計</th>
        <th class="bg-light">製作ステータス</th>
      </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= number_to_currency(order_item.intax_price) %></td>
          <td><%= order_item.quantity %></td>
          <td><%= number_to_currency(order_item.subtotal) %></td>
          <td>
          <%= form_with model: order_item,url: administrator_order_item_path(order_item),method: :patch do |f| %>
            <%= f.select :puroduction_status,OrderItem.puroduction_statuses.keys.map{|k| [I18n.t("enums.order_item.puroduction_status.#{k}"),k]},
                selected: order_item.puroduction_status %>&nbsp;
            <%= f.submit "更新",class: "btn btn-green text-white mx-1" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-sm-4 offset-sm-1 align-self-end">
    <div>
      <table class="table table-border">
        <tr><th class="bg-light">商品合計</th><td><%= number_to_currency(@order.payment_total) %></td></tr>
        <tr><th class="bg-light">送料</th><td>800円</td></tr>
        <tr><th class="bg-light">請求金額合計</th><td><% all_payment=@order.payment_total+800 %><%= number_to_currency(all_payment)%></td></tr>
      </table>
    </div>
    </div>
  </div>
</div>

<div class="navbar-collapse collapse show" id="navbarNavDropdown">
  <div class="col-lg-5 text-right text-white ">ようこそ<%= current_customer.first_name  %>さん！</div>
  <ul class="navbar-nav col-lg-7 d-block text-right ">
    <li class="d-inline-block">
       <%= link_to customers_path, class:"nav-link text-white" do %>
       <i class="fas fa-user-circle"></i>マイページ
       <% end %>
    </li>
    <li class="d-inline-block">
       <%= link_to items_path, class:"nav-link text-white" do %>
        <i class="fas fa-birthday-cake"></i>商品一覧
       <% end %>
    </li>
    <li class="d-inline-block">
     <%= link_to cart_items_path, class:"nav-link text-white" do %>
      <i class="fas fa-shopping-cart"></i>カート
     <% end %>
    </li>
    <li class="d-inline-block">
      <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-white" do %>
       <i class="fas fa-sign-out-alt"></i>ログアウト
      <% end %>
    </li>
    <div class="form-inline d-block text-right">
      <%= form_with url: search_items_items_path,method: :post do |f| %>
        <%= f.text_field :query ,class: "form-control",placeholder: "商品名で検索"%>
        <%= button_tag :type => "submit", :class =>"btn btn-outline-light" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </ul>
</div>
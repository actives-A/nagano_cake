<%= form_with model: @address, url: '/addresses', method: :post  do |f| %>
    <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="field">
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
       <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>

    <% end %>
<div class="container">
<div class="row mt-3 mb-5 ml-5">
 <h2 class="bg-light text-dark text-center">会員情報編集</h2>
</div>

 <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
   <div class="field form-group row">
     <%= f.label :"氏名" , class: "col-3"%>
     <%= f.text_field :last_name,placeholder: "山田", class: "col-2 control-label mr-3"%>
     <%= f.text_field :first_name,placeholder: "太郎", class: "col-2 control-label"%>
   </div>

   <div class="field form-group row">
     <%= f.label :"フリガナ" , class: "col-3"%>
     <%= f.text_field :kana_last_name,placeholder: "ヤマダ", class: "col-2 control-label mr-3" %>
     <%= f.text_field :kana_first_name,placeholder: "タロウ", class: "col-2 control-label"%>
   </div>

    <div class="field form-group row">
     <%= f.label :"郵便番号（ハイフンなし）", class: "col-3" %>
     <%= f.text_field :postal_code,placeholder: "0000000" , class: "col-2 control-label" %>
   </div>

   <div class="field form-group row">
     <%= f.label :"住所", class: "col-3 " %>
     <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6 control-label"  %>
   </div>

   <div class="field form-group row">
     <%= f.label :"電話番号（ハイフンなし）" , class: "col-3" %>
     <%= f.text_field :phone_namber,placeholder: "00000000000", class: "col-2 control-label" %>
   </div>

   <div class="field form-group row">
     <%= f.label :"メールアドレス", class: "col-3" %>
     <%= f.text_field :email, autofocus: true,placeholder: "samplie@example.com" ,autocomplete: "email", class: "col-2 control-label"%>
   </div>


  <div class="row">
    <div class= "col-6 text-right ">
      <%= f.submit "編集内容を保存", class: "btn btn-success col-6 " %>
    </div>
    <div class= "col-3 offset-1">
      <%= link_to "退会する", unsubscribe_path(current_customer), class: "btn btn-danger"  %>
    </div>
  </div>
   <% end %>
  </div>
 </div>
</div>
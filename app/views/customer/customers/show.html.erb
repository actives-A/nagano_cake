<div class="container">
  <h2 class="border-bottom text-dark text-center col-md-3 mt-3">マイページ</h2>
    <div class="row my-3">
      <h4 class="col-md-2">登録情報</h4>
       <%=link_to "編集する", edit_customers_path, class: "btn btn-outline-secondary rounded-pill text-dark text-center mt-2 col-md-2" %>
    </div>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered">
         <tbody>
          <tr>
            <th class="bg-light" >氏名</th>
            <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.kana_last_name %>&ensp;<%= @customer.kana_first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.phone_namber %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
       </table>
     </div>
    </div>
    <div class="row mt-2">
      <h4 class="col-md-2 ">配送先 </h4>
      <div class="col-md-7">
       <%=link_to "一覧を見る", addresses_path, class: "btn btn-green text-white rounded-pill col-md-3" %>
      </div>
    </div>
    <div class="row mt-2">
      <h4 class="col-md-2">注文履歴</h4>
      <div class="col-md-7 ">
       <%=link_to "一覧を見る", orders_path, class: "btn btn-green text-white rounded-pill col-md-3" %>
      </div>
    </div>
</div>



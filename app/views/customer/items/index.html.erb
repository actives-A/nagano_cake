<div class="container mb-5">
  <h2 class="mb-5 mt-5">商品一覧<span>（全<%= @items.count %>件）</span></h2>
  <div class='row px-md-0 ml-2 mt-5'>
    <div class='col-md-3 mx-auto mb-3'>
      <%= render "genre", genres: @genres %>
    </div>
    <div class='col-md-9 justify-content-end'>
      <div class='row mb-5'>
        <% @items.each do |item| %>
          <div class='card mx-1 border border-0 mr-3'>
             <%= link_to item_path(item) do %>
              <%= image_tag item.get_image ,size: "240x160"%>
             <% end %>
             <%= link_to item_path(item) do %>
             <p class="text-secondary mt-1 mb-0"><%= item.name %></p>
             <% end %>
             <p class="text-secondary"><%= number_to_currency(item.with_tax_price) %></p>

          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>




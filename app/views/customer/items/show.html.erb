<div class='row px-3 px-sm-0  mt-5'>


    <div class="col-sm-2 mx-auto my-2">
      <%= render "genre", genres: @genres %>
    </div>

    <div class=" d-block mx-auto my-2">
      <%= image_tag @item.get_image, size: "auto"%>
    </div>

    <div class='col-sm-4 mx-auto my-2'>
    <h2><%= @item.name %></h2>
    <p class="mt-3"><%= @item.explanation %></p>
     <h3 class="mt-5">￥<%= (@item.with_tax_price).to_i %>（税込）</h3>
     <div class="mt-5">
    <%= form_with model: CartItem.new(),url: cart_items_path,method: :post  do |f| %>
    <%= f.select :quantity, select_box_items(30)%>
    <%= f.hidden_field :item_id,:value =>@item.id %>
    <%= f.submit "カートに入れる", class: "ml-5" %>
    <% end %>
    </div>
  </div>

    </div>
  </div>

<div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h2>ジャンル検索</h2>
        <%= render "genre", genres: @genres %>
      </div>
      <div class="col-4">
        <%= image_tag @item.get_image %>
      </div>
      <div class="col-4">
        <%= @item.name %>
        <%= form_with model: CartItem.new(),url: cart_items_path,method: :post  do |f| %>
        <%= f.select :quantity,select_box_items(30) %>
        <%= f.hidden_field :item_id,:value =>@item.id %>
        <%= f.submit "カートに入れる" %>
        <% end %>
      </div>
   </div>
</div>


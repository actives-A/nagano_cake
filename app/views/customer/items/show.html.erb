<div class="container px-5 px-sm-0">
   <div class="row">
      <div class="col-4">
        <h2>ジャンル検索</h2>
        <%= render "genre", genres: @genres %>
      </div>
      <div class="col-4">
        <%= image_tag @item.get_image %>
      </div>
      <div class="col-4">
        <%= @item.name %>
        <%= form_with model: CartItem.new(),url: cart_items_path,method: :post  do |f| %>
        <%= f.select :quantity,[["1個","1"],["2個","2"],["3個","3"],["4個","4"],["5個","5"],["6個","6"],["7個","7"],["8個","8"],["9個","9"],["10個","10"]] %>
        <%= f.hidden_field :item_id,:value =>@item.id %>
        <%= f.submit "カートに入れる" %>
        <% end %>
      </div>
   </div>
</div>
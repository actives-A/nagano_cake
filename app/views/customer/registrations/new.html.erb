<div class="container">
  <div class="row">
    <div class="col mt-3">
    <h2 class="mb-5">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group row">
    <%= f.label :"名前" , class: "col-2"%>
    <%= f.label :"（姓）" , class: "col-1"%>
    <%= f.text_field :last_name,placeholder: "山田", class: "col-3 control-label"%>
    <%= f.label :"（名）", class: "col-1 " %>
    <%= f.text_field :first_name,placeholder: "太郎", class: "col-3 control-label" %>
  </div>

  <div class="field form-group row">
    <%= f.label :"フリガナ" , class: "col-2"%>
    <%= f.label :"(セイ)", class: "col-1"%>
    <%= f.text_field :kana_last_name,placeholder: "ヤマダ" , class: "col-3 control-label"%>
    <%= f.label :"（メイ）", class: "col-1" %>
    <%= f.text_field :kana_first_name,placeholder: "タロウ" , class: "col-3 control-label"%>
  </div>
  <div class="field form-group row">
    <%= f.label :"メールアドレス", class: "col-3" %>
    <%= f.text_field :email, autofocus: true,placeholder: "samplie@example.com" ,autocomplete: "email" , class: "col-3 control-label"%>
  </div>

  <div class="field form-group row">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-3" %>
    <%= f.text_field :postal_code,placeholder: "0000000", class: "col-3 control-label"  %>
  </div>

  <div class="field form-group row">
    <%= f.label :"住所", class: "col-3" %>
    <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0", class: "col-7 control-label"  %>
  </div>

  <div class="field form-group row">
    <%= f.label :"電話番号（ハイフンなし）" , class: "col-3" %>
    <%= f.text_field :phone_namber,placeholder: "00000000000" , class: "col-3 control-label"%>
  </div>

  <div class="field form-group row">
    <div class="col-3">
      <%= f.label :"パスワード"  %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
     <%= f.password_field :password, autocomplete: "new-password" , class: "col-3 control-label"%>
  </div>

  <div class="field form-group row">
    <%= f.label :"パスワード（確認用）", class: "col-3 " %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-3 control-label"%>
   </div>

  <div class="actions mb-5">
    <%= f.submit "新規登録", class: "btn btn-success col-3 offset-3 " %>
  </div>
 <% end %>
    <div class="row" >
     <h3>既に登録済みの方</h3>
    </div>
    <div class="ml-3 mt-3"><%=link_to "こちら", new_customer_session_path %>
      <span>からログインしてください。</span>
    </div>
  </div>
 </div>
</div>

<div class="container">
  <h2 class="col-md-3 text-center border-bottom mt-3">新規会員登録</h2>
  <%= form_with(model: @customer, url: customer_registration_path, local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
  <div class="col mt-5 g-3 needs-validation novalidate">
    <div class="field form-group row">
      <%= f.label :"名前" , class: "col-md-2"%>
      <%= f.label :"（姓）" , class: "col-md-1"%>
      <%= f.text_field :last_name,placeholder: "山田",autofocus: true, class: 'form-control col-md-3', required: true %>
      <%= f.label :"（名）", class: "col-md-1 " %>
      <%= f.text_field :first_name,placeholder: "太郎", autofocus: true, class:'form-control col-md-3', required: true%>
      <div class="invalid-feedback row offset-3">
        名前を入力してください。
      </div>
    </div>
    <div class="field form-group row">
      <%= f.label :"フリガナ" , class: "col-md-2"%>
      <%= f.label :"(セイ)", class: "col-md-1"%>
      <%= f.text_field :kana_last_name,placeholder: "ヤマダ" ,autofocus: true, class: 'form-control col-md-3', required: true %>
      <%= f.label :"(メイ)", class: "col-md-1" %>
      <%= f.text_field :kana_first_name,placeholder: "タロウ" ,autofocus: true, class: 'form-control col-md-3', required: true %>
      <div class="invalid-feedback row offset-3">
        フリガナを入力してください。
      </div>
    </div>
    <div class="field form-group row">
      <%= f.label :"メールアドレス", class: "col-md-3" %>
      <%= f.text_field :email, autofocus: true,placeholder: "samplie@example.com" ,autocomplete: "email" ,　autofocus: true, class: 'form-control col-md-3', required: true %>
      <div class="invalid-feedback row offset-3">
        メールアドレスを入力してください。
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-md-3" %>
      <%= f.text_field :postal_code,placeholder: "0000000",autofocus: true, class: 'form-control col-md-3', required: true  %>
      <div class="invalid-feedback row offset-3">
        郵便番号を入力してください。
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :"住所", class: "col-md-3" %>
      <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0",autofocus: true, class: 'form-control col-md-7', required: true   %>
      <div class="invalid-feedback row offset-3">
        住所を入力してください。
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :"電話番号（ハイフンなし）" , class: "col-md-3" %>
      <%= f.text_field :phone_namber,placeholder: "00000000000",autofocus: true, class: 'form-control col-md-3', required: true %>
       <div class="invalid-feedback row offset-3">
        電話番号を入力してください。
       </div>
    </div>

    <div class="field form-group row">
      <div class="col-md-3">
        <%= f.label :"パスワード"  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
       <%= f.password_field :password, autocomplete: "new-password",autofocus: true, class: 'form-control col-md-3', required: true %>
        <div class="invalid-feedback row offset-3">
          パスワードを入力してください。
        </div>
    </div>
    <div class="field form-group row">
      <%= f.label :"パスワード（確認用）", class: "col-md-3 " %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,autofocus: true, class: 'form-control col-md-3', required: true %>
      <div class="invalid-feedback row offset-3">
        パスワード（確認用）を入力してください。
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-blue col-md-3 rounded-pill  text-white offset-md-3 " %>
  </div>
  <% end %>
  <div class="row ml-3 mt-5">
    <h5 class="bg-light text-dark text-center">既に登録済みの方</h5>
  </div>
  <div class="offset-1 mt-1"><%=link_to "こちら", new_customer_session_path %>
    <span>からログインしてください。</span>
  </div>
</div>



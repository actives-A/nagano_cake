<div class="container">
 <div class="row">
  <div class="col-sm-4 mt-3">
    <h2 class="bg-light text-dark text-center">ショッピングカート</h2>
  </div>

  <div class="col-sm-8 text-right mt-5">
    <%=link_to "カートを空にする", cart_items_all_destroy_path , method: :delete, "data-confirm" => "本当に削除してよろしいでしょうか?", class: "btn btn-danger" %>
  </div>
 </div>
 <div class="row mt-3">
   <div class="col-sm-12">
   <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
   <tbody>
   <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image, :size => "100x100", class: "mr-3"  %>
            <%= cart_item.item.name%>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td class="text-center">
          <%= form_with model: cart_item, url: cart_item_path(id: cart_item.id), method: :patch do |f| %>
            <%= f.hidden_field :quantity, min: 1, max:100 %>
            <%= f.select :quantity, *[1..30] %>
            <%= f.submit "変更" , class: "btn btn-success ml-3"%>
          <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
             <% @sum +=  cart_item.subtotal %>
          </td>
          <td class="text-center"><%=link_to "削除する", cart_item_path(cart_item.id), class: "btn btn-danger", method: :delete %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
   </div>
  </div>
  <div class="row">
   <div class="col-sm-9 mt-3">
     <%=link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
   </div>
   <div class="col-sm-3  text-left mt-3">
    <table class="table table-bordered">
      <tr>
        <th class="bg-light">合計金額</th>
        <td><%= @sum%></td>
      </tr>
    </table>
   </div>
 </div>
 <div class="row">
   <div class="col-sm-12 text-center mt-2">
    <% if @cart_items.count == 0 %>
       <%=link_to "情報入力に進む", cart_items_path, class: "btn btn-success col-sm-4 control-label " %>
    <% else %>
      <%=link_to "情報入力に進む", new_order_path, class: "btn btn-success col-sm-4 control-label " %>
    <% end %>
   </div>
 </div>
</div>



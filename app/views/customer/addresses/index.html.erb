<div class="row">
  <div class="col">
  <h2>配送先登録/一覧</h2>
  <%= form_with model: @address, url: '/addresses', method: :post  do |f| %>
    <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="field">
      <%= f.label :"住所" %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :"宛名" %>
      <%= f.text_field :name %>
       <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>

    <% end %>

<div>
    <table class="table table-bordered ">
      <thead>
        <tr class="">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>

        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary" %>
              <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
</div>

  <div class="row px-5 mx-5 mb-5 mt-5">
    <h2 class="col-3 bg-light text-dark text-center">配送先登録/一覧</h2>
    <div class="ml-2">
      <%=render 'layouts/errors', obj: @address %>
    </div>
  </div>

  <div class="row ml-3">
    <div class="col-sm-11 ">
     <%= form_with model: @address, url: '/addresses', method: :post  do |f| %>
     <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）" , class: "col-sm-3 "%>
      <%= f.text_field :postal_code , class: "col-sm-3 control-label"%>
     </div>
     <div class="field">
      <%= f.label :"住所", class: "col-sm-3" %>
      <%= f.text_field :address, class: "col-sm-6 control-label" %>
     </div>
     <div class="field">
      <%= f.label :"宛名", class: "col-sm-3"%>
      <%= f.text_field :name, class: "col-sm-3 control-label"  %>
      <%= f.submit "新規登録", class: "btn btn-success col-sm-1 offset-3" %>
     </div>
   </div>
   <% end %>
  </div>
 <div class="row ml-4">
  <div class="col-sm-8 mt-5">
    <table class="table table-bordered ">
      <thead class="thead-light">
        <tr class="">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
    <tbody>
    <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td class="text-center"><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary mr-3" %>
              <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete %>
          </td>
        </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>



  <div class="row">
    <div class="col-sm-10">
      <h2>配送先登録/一覧</h2>
      <%= form_with model: @address, url: '/addresses', method: :post  do |f| %>
      <div class="field">
        <%= f.label :"郵便番号（ハイフンなし）" , class: "col-sm-3 control-label"%>
        <%= f.text_field :postal_code , class: "col-sm-3 control-label"%>
      </div>
      <div class="field">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :address, class: "col-sm-7 control-label" %>
      </div>
      <div class="field">
        <%= f.label :"宛名" , class: "col-sm-3 control-label"%>
        <%= f.text_field :name, class: "col-sm-3 control-label"  %>
         <!--%= f.submit "新規登録", class: "btn btn-success " %>-->
      </div>
    </div>
    <div class="col-sm-2"> <%= f.submit "新規登録", class: "btn btn-success " %></div>
    <% end %>
 </div>
 <div class="row ml-1">
    <div class="col-sm-8 mt-5">
      <table class="table table-bordered ">
        <thead class="thead-light">
          <tr class="">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
         <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary" %>
                <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete %>
            </td>
          </tr>
         <% end %>
       </tbody>
      </table>
      </div>
     </div>



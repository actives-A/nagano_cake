<div class="row px-5 mx-5 mb-5 mt-5">
  <h2 class="col-2 bg-light text-dark text-center">配送先編集</h2>
  <div class="ml-2">
    <%=render 'layouts/errors', obj: @address %>
  </div>
</div>

<div class="row ml-3">
  <div class="col-sm-11 ">
  <%= form_with model: @address do |f| %>
    <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3"%>
      <%= f.text_field :postal_code, class: "col-sm-3 control-label"%>
    </div>
    <div class="field">
      <%= f.label :"住所", class: "col-sm-3" %>
      <%= f.text_field :address, class: "col-sm-6 control-label"%>
    </div>
    <div class="field">
      <%= f.label :"宛名", class: "col-sm-3" %>
      <%= f.text_field :name , class: "col-sm-3 control-label"%>
      <%= f.submit "変更内容を保存", class: "btn btn-success  offset-3" %>
    </div>
   </div>
  <% end %>
</div>

 <div class="container">
  <h2 class="border-bottom text-dark text-center col-md-3 mt-3">注文履歴一覧</h2>
   <div class="row">
     <div class="table-responsive">
       <table class="table table-bordered text-nowrap">
        <thead class="thead-light">
         <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
        　<th scope="col">ステータス</th>
        　<th scope="col">注文詳細</th>
         </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
           <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
           <td><%= order.postal_code %><br>
               <%= order.address %><br>
               <%= order.send_name %>
           </td>
           <td>
             <% order.order_items.each do |order_item| %>
             <%= order_item.item.name %>
             <% end %>
           </td>
           <td><%= number_to_currency(order.total_money) %></td>
           <td><%= order.order_status_i18n %></td>
           <td class="text-center"><%=link_to "表示する", order_path(order.id), class: "btn btn-outline-secondary rounded-pill " %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
     </div>
    </div>
 </div>

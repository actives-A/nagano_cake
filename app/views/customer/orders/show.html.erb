<div class="row px-5 mx-5 mb-5 mt-5">
  <h2 class="col-3 bg-light text-dark text-center ">注文履歴詳細</h2>
</div>
<div class="row ml-3">
  <div class="col-md-6">
   <h3>注文情報</h3>
   <table class="table table-bordered">
    <tbody>
     <tr>
      <th class="bg-light">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
     </tr>
     <tr>
      <th class="bg-light">配送先</th>
      <td><%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.send_name %>
      </td>
     </tr>
     <tr>
      <th class="bg-light">支払方法</th>
      <td><%= @order.cash_mean %></td>
     </tr>
     <tr>
       <th class="bg-light">ステータス</th>
       <td><%= @order.order_status %></td>
     </tr>
    </tbody>
   </table>
  </div>
  <div class="col-md-4">
   <h3>請求情報</h3>
   <table class="table table-bordered">
 　  <tbody>
      <tr>
        <th class="bg-light">商品合計</th>
        <td><%= number_to_currency(@order.total_money)%></td>
      </tr>
      <tr>
        <th class="bg-light">配送料</th>
        <td><%= number_to_currency(@order.send_money) %></td>
      </tr>
      <tr>
        <th class="bg-light">ご請求金額</th>
        <td><%= number_to_currency(@total)%></td>
      </tr>
    </table>
   </div>
</div>

<div class="col-md-8 mt-3 ml-3">
  <h3>注文内容</h3>
  <table class="table table-bordered">
   <thead class="thead-light">
     <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
     </tr>
   </thead>
   <% @order_item.each do |order_item| %>
   <tbody>
     <tr>
       <td><%= order_item.item.name %></td>
       <td><%= number_to_currency(order_item.item.out_tax_price) %></td>
       <td><%= order_item.quantity %></td>
       <td><%= number_to_currency(order_item.intax_price)%></td>
      </tr>
    </tbody>
    <% end %>
   </div>
  </div>


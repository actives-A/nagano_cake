<h2>注文情報入力</h2>
<%= form_with model: @order,url: orders_confirm_path,method: :post do |f| %>

<div>
  <p>支払方法</p>
  <%= f.label  Order.cash_means_i18n[:credit_card] %>
  <%= f.radio_button :cash_mean, Order.cash_means.key(0)%>
  <%= f.label Order.cash_means_i18n[:transfer] %>
  <%= f.radio_button :cash_mean, Order.cash_means.key(1)  %>
</div>

<div>
  <p>お届け先</p>
  <div>
    <%= f.radio_button :send_place, "ご自身の住所" %>
    <%= f.label "ご自身の住所" %><br>
    〒<%= current_customer.first_name %><br>
    <%= current_customer.first_name %>
  </div>

  <div>
    <%= f.radio_button :send_place, "登録済住所から選択" %>
    <%= f.label "登録済住所から選択" %>
    <%= f.select :address_id,options_from_collection_for_select(Address.all, :id, :name) %>
  </div>

  <div>
    <%= f.radio_button :send_place, "新しいお届け先" %>
    <%= f.label "新しいお届け先" %><br>
    <%= f.label :new_send_name,"郵便番号（ハイフンなし）" %><%= f.text_field :new_send_name  %><br>
    <%= f.label :new_postal_code,"住所" %><%= f.text_field :new_postal_code %><br>
    <%= f.label :new_address,"宛名" %><%= f.text_field :new_address %><br>
  </div>
</div>


<%= f.submit "確認画面へ進む" %>

<% end %>
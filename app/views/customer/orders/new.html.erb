<div class="container">
  <h2 class="border-bottom mt-3 col-md-3 text-center">注文情報入力</h2>
  <div class="row">
    <div class="col-sm-10">
      <%= form_with model: @order,url: orders_confirm_path,method: :post do |f| %>

      <div class="row flex-column mt-5">
        <div class="col"><strong>支払方法</strong></div>
        <div class="col mt-3">
          <ul class="list-group">
            <li class="list-group-item">
              <%= f.radio_button :cash_mean, Order.cash_means.key(0)%>
              <%= f.label  Order.cash_means_i18n[:credit_card] ,class: "my-0"%>
            </li>
            <li class="list-group-item">
              <%= f.radio_button :cash_mean, Order.cash_means.key(1)%>
              <%= f.label Order.cash_means_i18n[:transfer] ,class: "my-0"%>
            </li>
          </ul>
        </div>
      </div>

      <div class="row flex-column my-3">
        <div class="col"><strong>お届け先</strong></div>
        <div class="col mt-3">
          <ul class="list-group">
            <li class="list-group-item">
              <%= f.radio_button :send_place, "ご自身の住所" %><%= f.label "ご自身の住所" %><br>
              <div class="mx-3">
                〒<%= current_customer.postal_code %>&ensp;<%= current_customer.address %><br>
                <%= current_customer.full_name %>
              </div>
            </li>
            <li class="list-group-item">
              <%= f.radio_button :send_place, "登録済住所から選択" %><%= f.label "登録済住所から選択" %><br>
              <div class="mx-3">
                <%= f.select :address_id,options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
              <div>
            </li>
            <li class="list-group-item">
              <%= f.radio_button :send_place, "新しいお届け先" %><%= f.label "新しいお届け先" %><br>
              <table class="mx-3">
                <tbody>
                  <tr>
                    <td><%= f.label :new_send_name,"郵便番号（ハイフンなし）" %></td>
                    <td><%= f.number_field :new_send_name,placeholder: "0000000"  %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :new_postal_code,"住所" %></td>
                    <td><%= f.text_field :new_postal_code,size: "70x5",placeholder: "東京都渋谷区代々木神園町０−０" %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :new_address,"宛名" %></td>
                    <td><%= f.text_field :new_address,placeholder: "令和道子" %></td>
                  </tr>
                </tbody>
              </table>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <%= f.submit "確認画面へ進む", class: "btn btn-blue text-white rounded-pill col-md-4 mt-5 mx-auto" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

